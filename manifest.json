{
  "manifest_version": 2,
  "name": "RickBrick",
  "version": "1.0",
  "description": "RickBrick blocks those extensions that never want to give you up!",
  "permissions": ["webRequest", "webRequestBlocking", "storage", "notifications"],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_icon": {
      "48": "icon.png"
    },
    "default_popup": "popup.html"
  },
  "icons": {
    "48": "icon.png"
  },
  "applications": {
    "gecko": {
      "id": "your_extension_id@domain.com"
    }
  },
  "web_accessible_resources": [
    "popup.html",
    "popup.js"
  ]
}
